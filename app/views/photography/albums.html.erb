 <div class="container">

        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">Albums</h1>
            </div>
            <% @albums.order('created_at DESC').each_with_index do |x, index| %>
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
            	<div class="album-item">
                	<a class="thumbnail" href="/album/<%= x.id %>">
                    	<img class="img-responsive" src="<%= x.cover_pic %>(:medium)" alt="<%= x.name %>">
                    	<div class="description"><%= x.name %></div>
                	</a>
                </div>
            </div>
           <% end %>
        </div>
</div>