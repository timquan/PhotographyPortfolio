 <div class="container">

        <div class="row">
		
            <div class="col-lg-12">
                <h1 class="page-header">Picture Gallery</h1>
            </div>

            <% @pictures.order('created_at DESC').each_with_index do |x, index| %>
            <div class="col-lg-3 col-sm-4 col-xs-6">
                <a class="thumbnail" data-lightbox="image" href="<%= x.image.url(:original) %>">
                    <img class="img-responsive" src="<%= x.image.url(:medium) %>" alt="<%= x.name %>">
                </a>
            </div>  
           <% end %>


        </div>
</div>